---
interface Props {
    title: String;
    description: String;
    tags: { name: String; class: string; icon: any }[];
    image: string;
}

const { title, description, tags, image } = Astro.props;
---

{
    (
        
            <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white" />
            <article >
                <h3 class="text-xl lg:text-2xl font-semibold text-orange-200 mb-2 mx-auto">
                    {title}
                </h3>
                <p class="text-lg lg-text-xl mb-4 mt-6 text-pretty max-w-[600px]">{description}</p>
                <ul class="flex gap-x-2 flex-row">
                    {tags.map((tag) => (
                        <li>
                            <span class={`items-center flex gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2`}>
                                <tag.icon class="size-4 lg:size-6" />
                                {tag.name}
                            </span>
                        </li>
                    ))}
                </ul>

                <img
                    class="rounded shadow-2xl shadow-white/20 mt-3 w-full mb-16 max-w-[600px]"
                    src={image}
                    alt={`Captura de pantalla del projecto ${image}`}
                />
            </article>
       
    )
}
