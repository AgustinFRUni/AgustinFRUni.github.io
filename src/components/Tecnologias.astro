---
import AstroIcon from "../icons/AstroIcon.astro";
import CSSIcon from "../icons/CSS.astro";
import FlutterIcon from "../icons/Flutter.astro";
import HTMLIcon from "../icons/HTML.astro";
import JavaScriptIcon from "../icons/JavaScript.astro";
import KotlinIcon from "../icons/Kotlin.astro";
import NextJsIcon from "../icons/NextJs.astro";
import ReactIcon from "../icons/React.astro";
import TailwindIcon from "../icons/Tailwind.astro";
import TypeScriptIcon from "../icons/TypeScript.astro";

const STACK = [
    {
        title: "HTML",
        icon: HTMLIcon,
    },
    {
        title: "CSS",
        icon: CSSIcon,
    },
    {
        title: "JavaScript",
        icon: JavaScriptIcon,
    },
    {
        title: "Tailwind",
        icon: TailwindIcon,
    },
    {
        title: "Astro",
        icon: AstroIcon,
    },
    {
        title: "TypeScript",
        icon: TypeScriptIcon,
    },
    {
        title: "React",
        icon: ReactIcon,
    },
    {
        title: "Next.js",
        icon: NextJsIcon,
    },
    {
        title: "Flutter",
        icon: FlutterIcon,
    },
    {
        title: "Kotlin",
        icon: KotlinIcon,
    },
];
---

<ul class="flex">
    {
        STACK.map((tech) => (
            <li class=" mb-4 ms-6 mt-50 items-center">
                <div class="text-center text-sm lg:text-base">
                    <tech.icon class={`size-10 w-full mb-2"`}/>
                        {tech.title}
                    
                </div>
            </li>
        ))
    }
</ul>
