---
import Layout from "../layouts/Layout.astro"
import Badge from "../components/Badge.astro"
import SectionContainer from "../components/SectionContainer.astro"
import LinkedInIcon from "../icons/LinkedIn.astro"
import SocialPill from "../components/SocialPill.astro"
import GitHubIcon from "../icons/Github.astro"
import MailIcon from "../icons/Mail.astro"
import Experience from "../components/Experience.astro"
import CodeIcon from "../icons/Code.astro"
import Projects from "../components/Projects.astro"
import User from "../icons/User.astro"
import SideProjects from "../components/SideProjects.astro"
import Contacto from "../components/Contacto.astro"
import Side from "../icons/Side.astro"
---

<Layout
  title="Portfolio de Agustin - Desarrollador y Programador Web y Mobile"
  description="Contrata a agustin para crear tu aplicación web o mobile / móvil. Desarrollador Web y Mobile. Especializado en Kotlin, Flutter y Astro."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <img
        class="rounded-full size-12 mb-4"
        src="https://avatars.githubusercontent.com/u/117775443?v=4"
        alt="agustin photo"
      />
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy Agustin <a
          href="https://avatars.githubusercontent.com/u/117775443?v=4"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-balance max-w-[700px]">
        <span class="text-orange-200/90">
			Desarrollador Mobile y Web</span
        >
         .<span class="text-blue-200/90"> De Corrientes, Argentina</span>.
        <span class="text-white/90"
          >Especializado en aplicaciones móviles para Android/Kotlin | Flutter/Dart y Web
		  con Astro.</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/agustin-fabian-rios/">
          <LinkedInIcon class="size-4 md:size-6" />
           LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/AgustinFRUni">
          <GitHubIcon class="size-4 md:size-6" />
           GitHub
        </SocialPill>
        <SocialPill href="mailto:agustinfruni@gmail.com">
          <MailIcon class="size-4 md:size-6" />
           agustinfruni@gmail.com
        </SocialPill>
		<SocialPill href="https://drive.google.com/file/d/1EcmhAerjVUC4YgGStmtZJ-uCubhxRBPs/view">
			<User class="size-4 md:size-6" />
			 Mi CV
		  </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
         Proyectos
      </h2>
      <Experience />
    </SectionContainer>

	<SectionContainer>
		<h4 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
		  <Side class="size-7" />
		   Proyectos secundarios
		</h4>
		<SideProjects />
	  </SectionContainer>

	  <SectionContainer id="contacto">
		<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
		</h2>
		<Contacto />
	  </SectionContainer>
  </main>
</Layout>